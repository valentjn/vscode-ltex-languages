{
    "name": "vscode-languagetool-${short code}",
    "displayName": "${Language} Support for LanguageTool",
    "version": "4.6.0",
    "description": "Enables grammar checking of ${Language} in LanguageTool for Visual Studio Code.",
    "icon": "img/png/LanguageTool-Icon-${short code}.png",
    "author": "Julian Valentin",
    "publisher": "valentjn",
    "preview": true,
    "extensionDependencies": [
        "valentjn.vscode-languagetool"
    ],
    "repository": {
        "url": "https://github.com/valentjn/vscode-languagetool"
    },
    "license": "Apache-2.0",
    "engines": {
        "vscode": "^1.8.0"
    },
    "galleryBanner": {
        "color": "#6565f6",
        "theme": "light"
    },
    "keywords": [
        "spell",
        "grammar",
        "proofread",
        "grammar-checker",
        "${Language}"
    ],
    "categories": [
        "Other"
    ],
    "contributes": {
        "configuration": {
            "title": "LanguageTool for Visual Studio Code",
            "properties": {
                "languageTool.${short code}.dictionary": {
                    "type": "array",
                    "default": [],
                    "description": "List of additional ${Language} (${short code}) words that should not be counted as spelling errors."
                }
            }
        }
    }
}
